                            alert("Hàng trong kho không đủ");
                        }
                    }
                })
            });

            var page = 1;
            var cateFilter = [];
            var sort = "0";

            $("#sort").change(function(){
               sort = $("#sort option:selected").val();
               $.ajax({
                        type: "post",
                        url: "/api/v1/shop/paging",
                        data: {page: page, cateFilter: cateFilter, sortProduct: sort},
                        dataType: "json",
                        success: function(resp){
