    <script>
        $(document).ready(function(){
            $("#sendMail").click(function(){
                window.location.href = "/api/v1/user/email";
            })

            $(document).on("focusout", "#phone", function(){
                $("#alert_phone").html("");
            })

            $(document).on("input", "#phone", function(){
                var vnf_regex = /((09|03|07|08|05)+([0-9]{8})\b)/g;
                var mobile = $('#phone').val();
                if (vnf_regex.test(mobile) == false) 
                {
                    $("#alert_phone").html("");
                    $("#alert_phone").append("<div class='text-xs font-normal text-red-600'>Số điện thoại của bạn không đúng định dạng!</div>")
                }else{
                    $("#alert_phone").html("");
                }
            })

            $("#save_user").on("click", function(){
                var data = new FormData($('#information')[0]);
                var vnf_regex = /((09|03|07|08|05)+([0-9]{8})\b)/g;
                var mobile = $('#phone').val();
                if (vnf_regex.test(mobile) == false && mobile) 
                {
                    $("#alert_phone").html("");
                    $("#alert_phone").append("<div class='text-xs font-normal text-red-600'>Số điện thoại của bạn không đúng định dạng!</div>")
                }else{
                $.ajax({
                    url: "/api/v1/user/profile",
                    type: "post",
                    contentType: false,
                    processData: false,
                    cache: false,
                    data: data,
                    success: function(resp){
                        $("#fullname").val(resp.data.fullname);
                        $("#address").val(resp.data.address);
                        $("#phone_user").html("");
                        $("#phone_user").append("<label>Phone number</label>"
                            +"<div class='mt-3'>"+ resp.data.phone
                               + "<a href='#' class='ml-3 underline underline-offset-2 text-blue-500'>Verify</a>"
                           +"</div>");
                        $("#fullname_user").html("");
                        $("#fullname_user").html(resp.data.fullname);
                        $("#avatar_user").attr("src",`https://drive.google.com/uc?export=view&id=${resp.data.avatar}`);
                        $("#avatar").attr("src",`https://drive.google.com/uc?export=view&id=${resp.data.avatar}`);
                    }
                })
            }
            })
        })
    </script>
