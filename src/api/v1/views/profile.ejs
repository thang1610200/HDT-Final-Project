                        <select name="gender" id="gender" class="input-box">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                </div> -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label>Email Address</label>
                        <div class="mt-3"><%= data.email%>
                            <% if(!data.isEmailActive){ %>
                            <button id="sendMail" class="ml-3 underline underline-offset-2 text-blue-500" type="button">Verify</button>
                            <%} else{%>
                                <span class="text-green-500"><i class="fa-solid fa-circle-check"></i>Verified</span>
                            <%}%>
                        </div>  
                    </div>
                    <div id="phone_user">
                        <% if(typeof data.phone === 'undefined'){%>
                            <label for="phone">Phone number</label> 
                            <input type="text" name="phone" id="phone" class="input-box">
                            <div id="alert_phone" ></div>
                        <%} else {%>
                            <label>Phone number</label>
                            <div class="mt-3"><%= data.phone%>
                                <% if(!data.isPhoneActive){ %>
                                <a href="/api/v1/user/otp/<%= data.phone_code%>" class="ml-3 underline underline-offset-2 text-blue-500">Verify</a>
                                <%} else{%>
                                    <span class="text-green-500"><i class="fa-solid fa-circle-check"></i>Verified</span>
                                <%}%>
                            </div>  
                        <%}%>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <button type="button" id="save_user"
                    class="py-3 px-4 text-center text-white bg-primary border border-primary rounded-md hover:bg-transparent hover:text-primary transition font-medium">save
                    changes</button>
            </div>
        </form>
